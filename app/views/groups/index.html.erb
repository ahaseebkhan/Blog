<div class="inline-flex rounded-md mb-20 grid md:grid-cols-6 sm:grid-cols-1" role="group">
  <%= link_to 'All groups', groups_path, class: 'py-2 px-4 text-sm font-medium text-gray-900 bg-white rounded-l-lg border border-gray-200 bg-gray-100 text-center' %>
  <%= link_to 'Created by me', groups_path(scope: :created_by), class: 'py-2 px-4 text-sm font-medium text-gray-900 bg-white border-t border-b border-gray-200 bg-gray-100 text-center' %>
  <%= link_to 'Where I am member', groups_path(scope: :joined_by), class: 'py-2 px-4 text-sm font-medium text-gray-900 bg-white rounded-r-md border border-gray-200 bg-gray-100 text-center' %>
  <div class="h-5"></div>
  <%= render(DialogComponent.new(title: "Create a new group", data: { action: 'click->modal#open' })) do %>
    <%= render 'form' %>
  <% end%>
</div>

<%= render(GroupComponent.with_collection(@groups, joined_group_ids: @joined_group_ids, user_id: current_user.id)) %>
