<div class="bg-grey-lighter min-h-screen flex flex-col content-center">
  <div class="container max-w-sm mx-auto flex-1 flex flex-col items-center justify-center px-2">
    <div class="bg-white px-6 py-8 rounded shadow-md text-black w-full">
      <h2 class="mb-8 text-3xl text-center">Sign up</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field">
          <%= f.label :display_name %><br />
          <%= f.text_field :display_name, autofocus: true, class: "block border border-grey-light w-full p-3 rounded mb-4" %>
        </div>

        <div class="field">
          <%= f.label :email %><br />
          <%= f.email_field :email, autocomplete: "email", class: "block border border-grey-light w-full p-3 rounded mb-4" %>
        </div>

        <div class="field">
          <%= f.label :password %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password", class: "block border border-grey-light w-full p-3 rounded mb-4" %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "block border border-grey-light w-full p-3 rounded mb-4" %>
        </div>

        <div class="actions">
          <%= f.button "Sign up", type: "submit", class: "w-full mt-8 bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %> 
        </div>
      <% end %>

      <div class="text-center mt-5"><%= render "devise/shared/links" %></div>
    </div>
  </div>
</div>