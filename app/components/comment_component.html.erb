<div class="p-6 items-center mb-10 bg-gray-200 rounded-xl">
  <p><%= comment.body %></p>
  
  <div class="grid md:grid-cols-8 sm:grid-cols-1 mt-10 text-sm text-slate-500">
    <span class="col-span-2">
      <%= user_id == comment.user_id ? 'You' : comment.user&.display_name %>
      <%= comment.commentable.class == Comment ? 'replied' : 'commented'  %> 
      <%= time_ago_in_words(comment.created_at) %> ago
    </span>
    <%= link_to "Edit", "#", data: { action: "click->form#edit" } if edit %>
    <%= link_to "Reply", "#", data: { action: "click->form#new" } %>
    <span><%= link_to 'Delete', comment_path(comment), data: { "turbo-method": :delete } if delete %></span>
  </div>  
</div>
